{
  // Workbench
  "workbench.colorTheme": "Base16 Material Darker",
  "workbench.list.horizontalScrolling": false,
  "workbench.panel.defaultLocation": "bottom",
  "workbench.fontAliasing": "auto",
  "workbench.activityBar.visible": true,
  "workbench.startupEditor": "welcomePage",
  "workbench.iconTheme": "material-icon-theme",
  // Editor
  "editor.tabSize": 2, // Make sure to update prettier.tabWidth
  "editor.useTabStops": true,
  "editor.gotoLocation.multiple": "goto",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.multiCursorModifier": "alt",
  "editor.renderIndentGuides": true,
  "editor.snippetSuggestions": "top",
  "editor.cursorBlinking": "solid",
  "editor.lineNumbers": "on",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  // Window
  "window.restoreWindows": "all",
  "window.newWindowDimensions": "maximized",
  // Breadcrumbs
  "breadcrumbs.enabled": true,
  // Fonts
  "editor.fontFamily": "'FuraCode Nerd Font', 'Hack Nerd Font'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  // Search
  "search.smartCase": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/svn": true,
    "**/hg": true,
    "**/.tox": true,
    "**/.terraform": true
  },
  // Terminal
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.inheritEnv": false,
  // Files
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/node_modules": true,
    "**/npm-debug.log": true,
    "**/.tox": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.tox/**": true,
    "**/.svn/**": true,
    "**/dist/**": true,
    "**/.terraform/**": true,
    "**/.swagger-codegen/**": true,
    "**/.eggs/**": true,
    "**/.pytest_cache/**": true
  },
  "files.eol": "\n",
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 0,
  // Prettier
  "prettier.tabWidth": 2, // Make sure to update editor.tabSize
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
